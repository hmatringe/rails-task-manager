<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h1>All tasks</h1>
      <ul>
        <% @tasks.each do |task| %>
        <li>
          <%= link_to task.name, task_path(task) %> | <%= task.description %> | <%= link_to "Edit", edit_task_path(task) %> | <%= link_to "Delete", task_path(task), method: "delete" %>
        </li>
        <% end %>
      </ul>
      <br>
      <%= link_to "Create a new task", new_task_path %>
    </div>
  </div>
</div>


